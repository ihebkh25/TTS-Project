		{
			"name": "Chat",
			"item": [
				{
					"name": "Chat - New Conversation",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response contains reply\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('reply');",
									"    pm.expect(jsonData).to.have.property('conversation_id');",
									"});",
									"",
									"pm.test(\"Conversation ID is UUID\", function () {",
									"    var jsonData = pm.response.json();",
									"    var uuidRegex = /^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i;",
									"    pm.expect(jsonData.conversation_id).to.match(uuidRegex);",
									"});",
									"",
									"// Save conversation ID for next request",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set('conversation_id', jsonData.conversation_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"message\": \"Hello, how are you?\",\n    \"conversation_id\": null\n}"
						},
						"url": {
							"raw": "{{base_url}}/chat",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"chat"
							]
						},
						"description": "Start a new conversation with the LLM"
					},
