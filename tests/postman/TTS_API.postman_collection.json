									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Uses same conversation ID\", function () {",
									"    var jsonData = pm.response.json();",
									"    var savedId = pm.environment.get('conversation_id');",
									"    if (savedId) {",
									"        pm.expect(jsonData.conversation_id).to.eql(savedId);",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
